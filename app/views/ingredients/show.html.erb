<%= render('partial/navbar', navbar: {active: "склад"}) %>

<div class="container-fluid">
  <div class="row">
    <%= render('partial/sidebar/depot', menu: {active: "ингридиенты"}) %>

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <ul class="nav nav-tabs">
        <li><%= link_to 'все товары', ingredients_path %></li>
        <li><%= link_to 'добавить товар', new_ingredient_path %></li>
      </ul>
      <div class="col-lg-6">
        <br/>

        <% if notice %>
            <div class="alert alert-success" role="alert"><%= notice %></div>
        <% end %>
        <strong>Название:</strong>
        <%= @ingredient.name %>
        </p>
        <p>
          <strong>Поставщик:</strong>
          <%= link_to @ingredient.provider.name, @ingredient.provider %>
        </p>
        <p>
          <strong>Единица измерения:</strong>
          <%= @ingredient.unit %>
        </p>

        <%= link_to 'Редактировать', edit_ingredient_path(@ingredient) %>

      </div>
    </div>
  </div>
</div>