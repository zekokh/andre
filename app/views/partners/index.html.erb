<%= render 'partial/navbar' %>

<div class="container-fluid">
  <div class="row">
    <%= render('partial/sidebar', menu: {active: "партнеры"}) %>

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <ul class="nav nav-tabs">
        <li class="active"><%= link_to 'все партнеры', partners_path %></li>
        <li><%= link_to 'добавить партнера', new_partner_path %></li>
      </ul>
      <br/>
      <% if @partners.length > 0 %>
          <table class="table table-hover">
            <thead>
            <tr>
              <th>Название</th>
              <th>Контактное лицо</th>
              <th>Телефон</th>
              <th>Адрес</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
            </thead>

            <tbody>
            <% @partners.each do |partner| %>
                <tr>
                  <td><%= link_to partner.name, partner %></td>
                  <td><%= partner.contact_name %></td>
                  <td><%= partner.phone %></td>
                  <td><%= partner.address %></td>

                  <td><%= link_to 'Изменить', edit_partner_path(partner) %></td>
                  <td><%= link_to 'Удалить', partner, method: :delete, data: {confirm: 'Вы уверены?'} %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
      <% else %>
          <div class="well well-lg">В базе нет партнеров! <br/>
            Для того что бы добавить партнера воспользуйтесь
            вкладкой <%= link_to 'Добавить партнера', new_partner_path %>.
          </div>
      <% end %>
      <br>
      <%= paginate @partners %>
    </div>
  </div>
</div>